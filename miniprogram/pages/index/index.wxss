
.con{
  height: 25vh;
  position: relative;
  top: 80rpx;
}
.top{
  display: flex;
  align-items: center;
  flex-direction: column;
  color: #fff;
  padding-top:150rpx;
}
.top-title{
  font-size:80rpx;
  font-weight: bold ;
  padding: 10rpx;
}
.top-more{
font-size: 32rpx;
}
.search{
  padding-top:120rpx ;
}
.search-main{
margin: auto;
display: flex;
align-items: center;
background: #fff;
border-radius: 10rpx;
height: 80rpx;
width: 86%;
}
.search-main icon{
  width: 80rpx;
  text-align: center;
}
.search-main input{
  flex: 1;
  font-size: 32rpx;
}
.search-list{
  display: flex;
  overflow-y: auto;
  flex-direction: column;
  background: #fff;
  width: 100%;
  position: fixed;
  left: 0;
  height: 723rpx;
 
  margin-top:20rpx ;
  z-index: 999;
  padding: 30rpx;
}
.search-list text{
  padding: 20rpx 0;
  border-bottom:1px solid #f5f5f5 ;
  font-size: 32rpx;
  color: #ccc;
}
.hot{
  height: 58vh;
  padding-top:30rpx;
}
.hot-search{
  padding: 30rpx;
}
.hot-item{
  display: flex;
  flex-wrap: wrap;
}
.hot-item text{
  border-radius: 30rpx;
  border: 1px solid #fff;
  padding: 5rpx 27rpx;
  font-size: 34rpx;
  margin:20rpx ;
  color: #fff;
}